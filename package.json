{
  "name": "daisyui-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "format": "bunx prettier 'packages/daisyui/src/**/*' 'packages/daisyui/functions/**/*' '*.js' 'packages/daisyui/theme/**/*' '*.css' '.prettierrc' --write",
    "lint": "biome lint . --write",
    "test": "bun test",
    "build": "cd packages/daisyui && bun run build",
    "build:docs": "cd packages/docs && bun run build",
    "dev": "cd packages/docs && bun run dev",
    "play": "bun run build && cd packages/playground && bun run dev",
    "wallace": "bunx -y wallace-cli packages/daisyui/daisyui.css",
    "publish:alpha": "npm publish --tag=alpha"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@tailwindcss/cli": "^4.0.0-beta.3",
    "commit-and-tag-version": "12.5.0",
    "lightningcss": "^1.27.0",
    "postcss": "^8.4.47",
    "postcss-js": "^4.0.1",
    "postcss-selector-parser": "^7.0.0",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "tailwindcss": "^4.0.0-beta.3",
    "zlib": "^1.0.5"
  }
}
